# Fintar Platform Environment Configuration
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development

# Frontend Configuration (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_WS_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=Fintar
NEXT_PUBLIC_APP_VERSION=1.0.0

# Backend Configuration (NestJS)
BACKEND_PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://fintar_user:fintar_password@localhost:5432/fintar_db?schema=public"
MONGODB_URI="mongodb://localhost:27017/fintar_ai"
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production-different-from-jwt-secret"
JWT_REFRESH_EXPIRES_IN="30d"

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2000

# Indonesian Financial APIs
YAHOO_FINANCE_API_KEY="your-yahoo-finance-api-key"
INVESTING_COM_API_KEY="your-investing-com-api-key"
IDX_API_KEY="your-idx-api-key"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn-here"
GOOGLE_ANALYTICS_ID="your-ga-id"

# Social Authentication (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Development Tools
PRISMA_STUDIO_PORT=5555
LOG_LEVEL="debug"

# Production Deployment (when deploying)
# VERCEL_URL="your-vercel-url"
# RAILWAY_URL="your-railway-url"
# DATABASE_URL="your-production-database-url"
